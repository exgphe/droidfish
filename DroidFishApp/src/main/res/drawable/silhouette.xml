<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="400dp"
    android:height="400dp"
    android:viewportWidth="400"
    android:viewportHeight="400">

    <!-- Chessboard squares (4x4 grid) -->
    <!-- Outer group to center the grid and scale to 60% -->
    <group
        android:translateX="80"
        android:translateY="80"
        android:scaleX="1.2"
        android:scaleY="1.2"
        >

        <path
            android:fillColor="#000000"
            android:pathData="M0,0h50v50h-50z" />
        <path
            android:fillColor="#FFFFFF"
            android:pathData="M50,0h50v50h-50z" />
        <path
            android:fillColor="#000000"
            android:pathData="M100,0h50v50h-50z" />
        <path
            android:fillColor="#FFFFFF"
            android:pathData="M150,0h50v50h-50z" />

        <!-- Row 2 -->
        <path
            android:fillColor="#FFFFFF"
            android:pathData="M0,50h50v50h-50z" />
        <path
            android:fillColor="#000000"
            android:pathData="M50,50h50v50h-50z" />
        <path
            android:fillColor="#FFFFFF"
            android:pathData="M100,50h50v50h-50z" />
        <path
            android:fillColor="#000000"
            android:pathData="M150,50h50v50h-50z" />

        <!-- Row 3 -->
        <path
            android:fillColor="#000000"
            android:pathData="M0,100h50v50h-50z" />
        <path
            android:fillColor="#FFFFFF"
            android:pathData="M50,100h50v50h-50z" />
        <path
            android:fillColor="#000000"
            android:pathData="M100,100h50v50h-50z" />
        <path
            android:fillColor="#FFFFFF"
            android:pathData="M150,100h50v50h-50z" />

        <!-- Row 4 -->
        <path
            android:fillColor="#FFFFFF"
            android:pathData="M0,150h50v50h-50z" />
        <path
            android:fillColor="#000000"
            android:pathData="M50,150h50v50h-50z" />
        <path
            android:fillColor="#FFFFFF"
            android:pathData="M100,150h50v50h-50z" />
        <path
            android:fillColor="#000000"
            android:pathData="M150,150h50v50h-50z" />
    </group>
</vector>
