<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:title="@string/prefs_pgn_viewer">
        <CheckBoxPreference
            app:key="viewVariations"
            app:title="@string/prefs_viewVariations_title"
            app:summary="@string/prefs_viewVariations_summary"
            app:defaultValue="true">
        </CheckBoxPreference>
        <CheckBoxPreference
            app:key="viewComments"
            app:title="@string/prefs_viewComments_title"
            app:summary="@string/prefs_viewComments_summary"
            app:defaultValue="true">
        </CheckBoxPreference>
        <CheckBoxPreference
            app:key="viewNAG"
            app:title="@string/prefs_viewNAG_title"
            app:summary="@string/prefs_viewNAG_summary"
            app:defaultValue="true">
        </CheckBoxPreference>
        <CheckBoxPreference
            app:key="viewHeaders"
            app:title="@string/prefs_viewHeaders_title"
            app:summary="@string/prefs_viewHeaders_summary"
            app:defaultValue="false">
        </CheckBoxPreference>
        <CheckBoxPreference
            app:key="showVariationLine"
            app:title="@string/prefs_showVariationLine_title"
            app:summary="@string/prefs_showVariationLine_summary"
            app:defaultValue="false">
        </CheckBoxPreference>
