        <CheckBoxPreference
            app:key="exportPlayerAction"
            app:title="@string/prefs_exportPlayerAction_title"
            app:summary="@string/prefs_exportPlayerAction_summary"
            app:defaultValue="false">
        </CheckBoxPreference>
        <CheckBoxPreference
            app:key="exportTime"
            app:title="@string/prefs_exportTime_title"
            app:summary="@string/prefs_exportTime_summary"
            app:defaultValue="false">
        </CheckBoxPreference>
    </PreferenceCategory>
</PreferenceScreen>
