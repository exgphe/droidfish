    <PreferenceCategory
        app:title="@string/prefs_pgn_import">
        <CheckBoxPreference
            app:key="importVariations"
            app:title="@string/prefs_importVariations_title"
            app:summary="@string/prefs_importVariations_summary"
            app:defaultValue="true">
        </CheckBoxPreference>
        <CheckBoxPreference
            app:key="importComments"
            app:title="@string/prefs_importComments_title"
            app:summary="@string/prefs_importComments_summary"
            app:defaultValue="true">
        </CheckBoxPreference>
        <CheckBoxPreference
            app:key="importNAG"
            app:title="@string/prefs_importNAG_title"
            app:summary="@string/prefs_importNAG_summary"
            app:defaultValue="true">
        </CheckBoxPreference>
    </PreferenceCategory>
    <PreferenceCategory
        app:title="@string/prefs_pgn_export">
        <CheckBoxPreference
            app:key="exportVariations"
            app:title="@string/prefs_exportVariations_title"
            app:summary="@string/prefs_exportVariations_summary"
            app:defaultValue="true">
        </CheckBoxPreference>
        <CheckBoxPreference
            app:key="exportComments"
            app:title="@string/prefs_exportComments_title"
